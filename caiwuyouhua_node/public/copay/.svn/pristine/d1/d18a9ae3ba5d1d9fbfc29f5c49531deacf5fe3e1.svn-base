//监听保单类型
var InsuranceTypechange = function (callback) {
    var Insuranceype = $('#Insurance_type').val();
    var policyType = null;
    if (Insuranceype == '高端医疗险') {
        policyType = 'GHB'
    }else if (Insuranceype == '团体医疗险') {
        policyType = 'NGB'
    }else if (Insuranceype == '个人高端医疗险') {
        policyType = 'IPMI'
    }
    if(callback){
        callback(policyType)
    }
    console.log(policyType);
    return policyType
};
