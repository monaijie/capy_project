//获取支付订单信息接口
function goToPayOrder(json, success, fail) {
    $.ajax({
        url: 'http://member-test.cignacmb.com/copay/getInfo',
        type: 'post',
        timeout: 180000,
        data: json,
        dataType: 'json',
        success: function (data) {
            handleExpired(data);
            success(data)
        },
        error: function (res, error) {
            fail(res)
            showAlert('系统超时，请重试')
        }
    });
}

