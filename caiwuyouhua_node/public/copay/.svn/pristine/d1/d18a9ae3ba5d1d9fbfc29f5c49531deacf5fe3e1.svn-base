//监听金额变化
function PayrChange() {
    var pay = $("#pay").val();

    pay = keepOnlyNumber(pay);
    $("#pay").val(pay)
    if (pay != "") {
        $("#clearPay").css("display", "block")
    } else {
        $("#clearPay").css("display", "none")

    }
}
//数字与小数点
function keepOnlyNumber(value) {
    value = value.toString();
    var newstr;
    // var regexp = /[^\d]]*/g;
    var regexp = /[^0-9\/.]*/g;
    newstr = value.replace(regexp, "");
    return newstr
}
