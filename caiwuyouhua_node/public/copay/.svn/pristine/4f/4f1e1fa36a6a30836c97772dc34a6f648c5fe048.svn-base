
html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%
}

* {
    box-sizing: border-box;
}

.font_gray{
    color: #595757;
}

.lf {
    float: left;
}

.title {
    text-align: center;
}

.list{
    margin-top: 0.6rem;
}
.display_non{
    display: none;
}
.line{
    margin-top: 5%;
    width: 100%;
    height: 1px;
    background-color: #e2e2e2;
}

.list .form_input{
    width: 100%;
    background-color: #f7f7f7;
    padding: 0.5rem 0.3rem;
    margin-top: 0.4rem;
    color: #595757;
    position: relative;
    border-radius: 4px;
}

.list .form_input img{
    position: absolute;
    top: 35%;
    right: 3%;
}

.list .form_input select{
    width: 100%;
    background-color:rgba(255, 255, 255, 0);
    border: 0;
    font-size: 0.9rem;
    outline:none;
    appearance:none;
    -moz-appearance:none;
    -webkit-appearance:none;
}

.list .form_input input{
    width: 100%;
    background-color:rgba(255, 255, 255, 0);
    border: 0;
    font-size: 0.9rem;
    outline:none;
}

.list .form_input div{
    font-size: 1rem;
    width: 100%;
    text-align: center;
}

.list .laber{
    color: #595757;
}



.main {
    width: 100%;
}

.main .body {
    width: 88%;
    margin-left: 6%
}

.main .leftInfo {
    width: 30%;
}

.main .rightInfo {
    width: 70%;
}

.commitBtn{
    width: 88%;
    margin-left: 6%;
    padding: 0.7rem;
    background-color: #3ca8ef;
    color: white;
    text-align: center;
    margin-top: 8%;
    font-size: 1.1rem;
    margin-bottom: 1.2rem;
}

.shady_popup{
    display: none;
    position: fixed;
    top: 30%;
    left: 10%;
    width: 80%;
    height: 12%;
    background-color: rgba(49, 38, 53, 0.45);
    z-index: 10;
    border-radius: 10px;
}

.shady_popup .TipMain{
    text-align: center;
    color: #fff;
    line-height: 5.5rem;
}

.report_preview{
    display: none;
    position: fixed;
    top: 0%;
    left: 0%;
    width: 100%;
    height: 100%;
    background-color: rgba(53, 53, 53, 0.45);
    z-index: 10;
}

.report_preview .preview_tip{
    background-color: white;
    padding: 0.5rem 0.3rem;
    margin: 50% auto 0;
    width: 85%;
    border-radius: 5px;
    /*text-align: center;*/
    line-height: 1.7rem;
}
.preview_btn{
    width: 60%;
    margin: 1.2rem auto 0.5rem;
    padding: 0.7rem;
    background-color: #3ca8ef;
    color: white;
    text-align: center;
    font-size: 1.1rem;
    border-radius: 5px;
}